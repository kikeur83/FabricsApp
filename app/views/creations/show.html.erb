<div class="main-container">
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://res.cloudinary.com/drizziyom/image/upload/w_1000,ar_1:1,c_fill,g_auto,e_art:hokusai/v1655721002/seed/cerisier_cnpfml.jpg" class="d-block w-100" >
      </div>
      <div class="carousel-item">
        <img src="https://res.cloudinary.com/drizziyom/image/upload/c_scale,h_1327,q_80,r_0,w_1642/v1655721000/seed/cerise_r570k6.jpg" class="d-block w-100" >
      </div>
      <div class="carousel-item">
        <img src="https://res.cloudinary.com/drizziyom/image/upload/w_1000,ar_1:1,c_fill,g_auto,e_art:hokusai/v1655720993/seed/abricotier_yscd7s.jpg" class="d-block w-100" >
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <button class="to-top">Top</button>

  <div class="title">
    <h1><%= @creation.name %></h1>
    <p>Temps de réalisation : <%= @creation.time %> Heure(s)</p>
  </div>

  <div class="favori">
    <%= render 'shared/like_button', creation: @creation %>
  </div>


  <div class="patron">
    <div class="mon-bouton-recherche">
      <%= link_to "Télécharger patron", asset_path(@creation.patron_link), target: :_blank %>
    </div>
  </div>

  <div class="tag-description">
    <div class="engloble-tag">
      <p style="text-decoration:none;"><%= @creation.tagline %></p>
      <p style="text-decoration:none;"><%= @creation.description %></p>
    </div>
  </div>

  <div class="display-img-show">
    <% @creation.photos.first(4).each do |photo| %>
      <%= cl_image_tag photo.key, height: 450, width: 450, crop: :fill, class: "item"  %>
    <% end %>
  </div>

  <div class="bouton-top"></div>
  <div class="notice">
    <div class="lespdf">
      <% @creation.photos.drop(5).each do |photo| %>
        <%= cl_image_tag photo.key, height: 1052, width: 744 %>
      <% end %>
    </div>
    <div class="mon-bouton-recherche">
      <%= link_to "Télecharger notice", asset_path(@creation.notice_pdf), target: :_blank %>
    </div>
  </div>

  <br>
  <br>
  <br>

  <div class="mon-bouton-recherche">
    <%= link_to "Retour recherches", creations_path(:query_long => params[:query_long], :query_larg => params[:query_larg]), class: "bk-index" %>
  </div>

  <div class="autres-crea">
    <% creations = [] %>
    <% @creations.each do |creation| %>
      <% if creation.id != @creation.id %>
        <% creations << creation %>
      <% end %>
    <% end %>
    <% if creations.present? %>
      <h2>Autres créations possibles avec les mesures saisies</h2>
      <div class="card-container">
        <% i = 0 %>
        <% @creations.each do |creation| %>
          <div>
            <%= link_to creation_path(creation) do %>
              <%= render 'shared/card', creation: creation %>
            <% end %>
          </div>
          <% i = i + 1 %>
          <% break if i == 3 %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
