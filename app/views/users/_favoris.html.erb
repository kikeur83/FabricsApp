<div class="user-page-modal favoris d-none">
  <div>
    <div class="card-container">
      <% if @current_user_favorites_id.present? %>
        <% creations = [] %>
        <% @current_user_favorites_id.each do |favori| %>
          <% creations << Creation.find(favori) %>
        <% end %>
        <% creations.each do |creation| %>
          <div>
            <%= link_to creation_path(creation) do %>
              <%= render 'shared/card', creation: creation %>
            <% end %>
          </div>
        <% end %>
      <%  else %>
        <h2> Vous n'avez actuellement pas de favori </h2>
      <% end %>
    </div>
  </div>
</div>
